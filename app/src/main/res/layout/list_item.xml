<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="usd"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="true"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/buy_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        app:layout_constraintStart_toEndOf="@+id/currency"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/buy_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buy_value"
        app:layout_constraintStart_toStartOf="@+id/buy_value"
        app:layout_constraintEnd_toEndOf="@+id/buy_value"
        android:text="Bank"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/buy_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buy_bank_name"
        app:layout_constraintStart_toStartOf="@+id/buy_bank_name"
        app:layout_constraintEnd_toEndOf="@+id/buy_bank_name"
        android:text="Region"
        android:visibility="invisible"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/trade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        app:layout_constraintStart_toEndOf="@+id/buy_value"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/trade_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/trade_value"
        app:layout_constraintStart_toStartOf="@+id/trade_value"
        app:layout_constraintEnd_toEndOf="@+id/trade_value"
        android:text="Bank"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/trade_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/trade_bank_name"
        app:layout_constraintStart_toStartOf="@+id/trade_bank_name"
        app:layout_constraintEnd_toEndOf="@+id/trade_bank_name"
        android:text="Region"
        android:visibility="invisible"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/CB_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>